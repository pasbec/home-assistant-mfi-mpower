{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": {
    "editor.defaultFormatter": null
  },
  "editor.formatOnSave": true,
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "cSpell.ignoreWords": [
    "asyncssh",
    "bumpversion",
    "clientsession",
    "codeowners",
    "hass",
    "homeassistant",
    "homekit",
    "hwaddr",
    "hwaddrs",
    "isort",
    "joinpath",
    "mpower",
    "pasbec",
    "pathlib",
    "powerfactor",
    "pylint",
    "pyproject",
    "pytest",
    "setuptools",
    "ssdp",
    "ubnt",
    "zeroconf"
  ],
  "cSpell.words": ["reauthentication", "Ubiquiti"]
}
